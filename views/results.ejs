<% include partials/header %>

</head>

<body>
	<div class="col-sm-6">
		<h1></h1>
		<a href="/favMaovies" class="btn btn-danger" data-toggle="modal" id="fav"><span>favoriate</span></a>
	</div>
	</div>
	</div>

	<div style="overflow:auto;" id="export">

		<table id="example" class="table table-striped table-hover" style="width:100%">
			<thead>
				<tr>
					<th></th>
					<th id="posterID"></th>
					<th>Name</th>
					<th>Year</th>
					<th>Director</th>
					<th>Cast</th>
				</tr>
			</thead>
			<tbody>

				<% resultData['search'].forEach(function(movie){ %>

				<tr>
					<% var imdb_url = 'https://www.imdb.com/title/' + movie['imdbID'] %>

					<td>
						<form action="/favorites" method="get">
							<input type="hidden" name="fav" placeholder="search term" value="<%= movie['imdbID'] %>">
							<button id="submit" type="submit"><i class="<%= movie['classname'] %>" onclick="btnClick(this)" id="number"
								 value=""></i></button>
						</form>

					</td>
					<td id='Poster'><img src="<%= movie['Poster'] %>" alt="<%= movie['Title'] %>" style="	height: 20%;"></td>
					<td id='title'>
						<%= movie['Title'] %>
					</td>
					<td id='Year'>
						<%= movie['Year'] %>
					</td>
					<td id='Director'>
						<%= movie['Director'] %>
					</td>
					<td id='Actors'>
						<%= movie['Actors'] %>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
	</div>

	</div>

</body>
</html>